@using Project2WooxTravel.Entities
@using PagedList
@using PagedList.Mvc
@model PagedList.IPagedList<Destination>

<div class="visit-country">
    <div class="container">
        <div class="row">
            <div class="col-lg-5">
                <div class="section-heading">
                    <h2>Şimdi Şehirlerimizden Birini Ziyaret Edin</h2>
                    <p>"Her bir şehrimiz, kendine has kültürü, tarihi ve doğal güzellikleriyle keşfedilmeyi bekliyor. Yerel lezzetleri tatmak, geleneksel müzikleri dinlemek ve benzersiz manzaraları görmek için hazır olun. Seyahat etmek, yeni deneyimlerle dolu bir serüvenin kapılarını aralar."</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="items">
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-lg-12">
                                <div class="item">
                                    <div class="row">
                                        <div class="col-lg-4 col-sm-5">
                                            <div class="image">
                                                <img src="@item.ImageUrl" alt="">
                                            </div>
                                        </div>
                                        <div class="col-lg-8 col-sm-7">
                                            <div class="right-content">
                                                <h4>@item.Country</h4>
                                                <span>@item.City</span>
                                                <div class="main-button">
                                                    <a href="/Default/TurBilgileri/@item.DestinationId">Tur Detaylarını Gör</a>
                                                </div>
                                                <p>
                                                    @(item.Description.Length > 500
        ? item.Description.Substring(0, 500) + "..."
        : item.Description)
                                                    <a href="/Default/TurBilgileri/@item.DestinationId">Devamını Oku</a>
                                                </p>

                                                <ul class="info">
                                                    <li><i class="fa fa-clock"></i>@item.DayNight Gün - @(item.DayNight-1) Gece</li>
                                                    <li><i class="fa fa-turkish-lira"></i>@item.Price</li>
                                                    <li><i class="fa fa-car"></i>@item.Capacity Kişi</li>
                                                </ul>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <div class="pagination-wrapper text-center" style="margin-left:600px;">
            @Html.PagedListPager((IPagedList)Model, p => Url.Action("Index", new { p }), new PagedListRenderOptions
       {

           LiElementClasses = new List<string> { "page-link" },
           MaximumPageNumbersToDisplay=3,
            DisplayLinkToFirstPage = PagedListDisplayMode.Never,
           DisplayLinkToLastPage = PagedListDisplayMode.Never


       })
        </div>
    </div>
</div>
