@{
    ViewBag.Title = "Charts";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<div class="container mt-4">
    
    

    <div class="row" style="margin-top:100px;">
        <!-- Line Chart -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Yapılan Son 20 Rezervasyon</div>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <h5 class="card-title text-center">Line Chart</h5>
                        <canvas id="myLineChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bar Chart -->
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Kişi Sayısına Göre En Yüksek 10 Rezervasyon</div>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <h5 class="card-title text-center">Bar Chart</h5>
                        <canvas id="myBarChart"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Pie Chart -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Turlar ve Kapasiteleri</div>
                </div>  
                <div class="card-body">
                    <div class="chart-container">
                        <h5 class="card-title text-center">Pie Chart</h5>
                        <canvas id="myPieChart"
                                style="width: 50%; height: 50%"></canvas>
                    </div>
                </div>
            </div>
        </div>

        <!-- Doughnut Chart -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <div class="card-title">Turlar ve Fiyatlandırmaları</div>
                </div>
                <div class="card-body">
                    <div class="chart-container">
                        <h5 class="card-title text-center">Doughnut Chart</h5>
                        <canvas id="myDoughnutChart"
                                style="width: 50%; height: 50%"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

<script type="text/javascript">
    window.onload = function () {
        var ReservationsName = @Html.Raw(Json.Encode(ViewBag.ReservationsName));
        var ReservationsPerson = @Html.Raw(Json.Encode(ViewBag.ReservationPerson));
        var TurName=@Html.Raw(Json.Encode(ViewBag.TurSayısıAdı));
        var TurSay = @Html.Raw(Json.Encode(ViewBag.TurKapasitesi));
        var TurFiyat = @Html.Raw(Json.Encode(ViewBag.TurFiyatı));
        var TopName = @Html.Raw(Json.Encode(ViewBag.TopResName));
        var TopPerson = @Html.Raw(Json.Encode(ViewBag.TopResPerson));
        // Line chart
        var ctxLine = document.getElementById('myLineChart').getContext('2d');
        new Chart(ctxLine, {
            type: 'line',
            data: {
                labels: ReservationsName,
                datasets: [{
                    label: 'Kişi Sayısı',
                    data: ReservationsPerson,
                    borderColor: 'rgba(54, 162, 235, 1)',
                    backgroundColor: 'rgba(54, 162, 235, 0.2)',
                    fill: true,
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        // Bar chart
        var ctxBar = document.getElementById('myBarChart').getContext('2d');
        new Chart(ctxBar, {
            type: 'bar',
            data: {
                labels: TopName,
                datasets: [{
                    label: 'Kişi Sayısı',
                    data: TopPerson,
                    backgroundColor: 'rgba(54, 162, 235, 0.6)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        // Pie chart
        var ctxPie = document.getElementById('myPieChart').getContext('2d');
        new Chart(ctxPie, {
            type: 'pie',
            data: {
                labels: TurName,
                datasets: [{
                    label: 'Tur Kapasitesi',
                    data: TurSay, 
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.6)',  
                        'rgba(54, 162, 235, 0.6)',   
                        'rgba(255, 206, 86, 0.6)',  
                        'rgba(75, 192, 192, 0.6)',  
                        'rgba(153, 102, 255, 0.6)', 
                        'rgba(255, 159, 64, 0.6)',   
                        'rgba(201, 203, 207, 0.6)',   
                        'rgba(255, 99, 132, 0.6)',    
                        'rgba(54, 162, 235, 0.6)',     
                        'rgba(255, 206, 86, 0.6)',      
                        'rgba(231, 233, 237, 0.6)',    
                        'rgba(255, 99, 132, 0.6)',      
                        'rgba(54, 162, 235, 0.6)',     
                        'rgba(255, 206, 86, 0.6)',      
                        'rgba(75, 192, 192, 0.6)',      
                        'rgba(153, 102, 255, 0.6)',   
                        'rgba(255, 159, 64, 0.6)',    
                        'rgba(201, 203, 207, 0.6)',     
                        'rgba(255, 87, 34, 0.6)',     
                        'rgba(76, 175, 80, 0.6)'       
                    ]
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'top' }
                }
            }
        });


        // Doughnut chart
        var ctxDoughnut = document.getElementById('myDoughnutChart').getContext('2d');
        new Chart(ctxDoughnut, {
            type: 'doughnut',
            data: {
                labels: TurName,
                datasets: [{
                    label: 'Fiyat',
                    data: TurFiyat,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.6)', 
                        'rgba(54, 162, 235, 0.6)',   
                        'rgba(255, 206, 86, 0.6)',   
                        'rgba(75, 192, 192, 0.6)',    
                        'rgba(153, 102, 255, 0.6)',  
                        'rgba(255, 159, 64, 0.6)',    
                        'rgba(201, 203, 207, 0.6)',   
                        'rgba(255, 99, 132, 0.6)',   
                        'rgba(54, 162, 235, 0.6)',      
                        'rgba(255, 206, 86, 0.6)',      
                        'rgba(231, 233, 237, 0.6)',    
                        'rgba(255, 99, 132, 0.6)',    
                        'rgba(54, 162, 235, 0.6)',     
                        'rgba(255, 206, 86, 0.6)',      
                        'rgba(75, 192, 192, 0.6)',     
                        'rgba(153, 102, 255, 0.6)',    
                        'rgba(255, 159, 64, 0.6)',      
                        'rgba(201, 203, 207, 0.6)',   
                        'rgba(255, 87, 34, 0.6)',      
                        'rgba(76, 175, 80, 0.6)'        
                    ]
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'top' }
                }
            }
        });
    };
</script>

<style>
    .card {
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        border: none;
        border-radius: 8px;
    }

    .card-title {
        font-weight: 600;
    }

    canvas {
        max-width: 100%; 
        height: 200px; 
    }
</style>
