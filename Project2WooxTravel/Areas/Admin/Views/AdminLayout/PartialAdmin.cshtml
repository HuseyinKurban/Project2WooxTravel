@model List<Project2WooxTravel.Entities.Admin>
<li class="nav-item topbar-user dropdown hidden-caret">
    <a class="dropdown-toggle profile-pic"
       data-bs-toggle="dropdown"
       href="#"
       aria-expanded="false">
        <div class="avatar-sm">
            <img src="/kaiadmin-lite-1.2.0/assets/img/profile.jpg"
                 alt="..."
                 class="avatar-img rounded-circle" />
        </div>
        <span class="profile-username">
            @foreach (var x in Model)
            {
                <span class="op-7">Merhaba,</span>
                <span class="fw-bold">@x.UserName</span>
            }

        </span>
    </a>
    <ul class="dropdown-menu dropdown-user animated fadeIn">
        <li>
            <div class="dropdown-user-scroll scrollbar-outer">
                <div class="user-box">
                    <div class="avatar-lg">
                        <img src="/kaiadmin-lite-1.2.0/assets/img/profile.jpg"
                             alt="image profile"
                             class="avatar-img rounded" />
                    </div>
                    <div class="u-text">
                        @foreach (var item in Model)
                        {
                            <h4>@item.UserName</h4>
                            <p class="text-muted">@item.Email</p>
                            <a href="/Admin/Profile/Index"
                               class="btn btn-xs btn-secondary btn-sm">Profili Görüntüle</a>
                        }

                    </div>
                </div>
            </div>
        </li>
        <li>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/Admin/Message/Inbox">Inbox</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/Admin/Profile/Index">Account Setting</a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="#">Logout</a>
        </li>
    </ul>
</li>
