                            </div>
                            <div class="col-7 col-stats">
                                <div class="numbers">
                                    <p class="card-category">En Güncel Tur Kapasitesi</p>
                                    <h4 class="card-title">@ViewBag.GuncelKapasite</h4>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
          
        </div>
        <!-- Card With Icon States Background -->
        <div class="row">
            <div class="col-sm-6 col-md-3">
                <div class="card card-stats card-round">
                    <div class="card-body">
                        <div class="row align-items-center">
                            <div class="col-icon">
                                <div class="icon-big text-center icon-primary bubble-shadow-small">
                                    <i class="fas fa-users"></i>
                                </div>
                            </div>
                            <div class="col col-stats ms-3 ms-sm-0">
                                <div class="numbers">
                                    <p class="card-category">Toplam Rezervasyon</p>
                                    <h4 class="card-title">@ViewBag.ToplamRezervasyon</h4>
                                </div>
